{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@components": ["src/components"],
			"@components/*": ["src/components/*"],
			"@context": ["src/context"],
			"@context/*": ["src/context/*"],
			"@hooks": ["src/hooks"],
			"@hooks/*": ["src/hooks/*"],
			"@pages": ["src/pages"],
			"@pages/*": ["src/pages/*"],
			"@styles": ["src/styles"],
			"@styles/*": ["src/styles/*"],
			"@/types": ["src/types"],
			"@/types/*": ["src/types/*"],
			"@utils": ["src/utils"],
			"@utils/*": ["src/utils/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
